#!/usr/bin/env ruby
$LOAD_PATH.unshift( File.join( File.dirname(__FILE__)), 'lib' )

require 'benchmark'
require 'sentence_annotator'

sentences = Array.new(100, "I like cheese. Do you?")

Benchmark.bmbm do |x|
  x.report("Long Sentence") do
    a = SentenceAnnotator.new
    a.parse(sentences.join(" "))
  end
  x.report("Lots of Invocations") do
    a = SentenceAnnotator.new
    sentences.each do |sentence|
      a.parse(sentence)
    end
  end
  x.report("No POS") do
    a = SentenceAnnotator.new([:tokenize, :ssplit])
    sentences.each do |sentence|
      a.parse(sentence)
    end
  end
end